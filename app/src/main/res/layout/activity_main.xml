<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">

        <!-- Background (no video icon) -->
        <ImageView
            android:id="@+id/image_no_video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@string/content_description_background"
            android:focusable="false"
            android:src="@drawable/no_video"
            android:visibility="visible" />

        <!-- Video Controller Layout -->
        <include layout="@layout/video_controller" />

        <!-- Video Paint Layout -->
        <include layout="@layout/video_paint" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>